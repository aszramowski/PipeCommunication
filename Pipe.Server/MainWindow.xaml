<Window x:Class="Pipe.Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pipe.Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="220">
    <DockPanel>
        <StackPanel Margin="5">
            <Button Content="Start server" Click="StartServerHandler" Width="125" Height="25" Margin="5"/>
            <Button Content="Stop server" Click="StopServerHandler" Width="125" Height="25" Margin="5"/>
            <TextBlock Margin="10" >
                <Run Text="Status : "/>
                <Run Name="tb_pipeStatus" Text="Idle"/>
            </TextBlock>
        </StackPanel>
    </DockPanel>
</Window>
